  <check_box bottom_delta="-47" control_name="AOEnabled" enabled="true"
     follows="left|top" font="SansSerifSmall" height="16" initial_value="false" label="Enable AO" left="10"
     mouse_opaque="true" name="AOEnabled" radio_style="false" width="90" />
  <check_box bottom_delta="-22" control_name="AOSitsEnabled" enabled="true"
	     follows="left|top" font="SansSerifSmall" height="16" initial_value="true" label="Enable AO sits" left="10"
	     mouse_opaque="true" name="AOSitsEnabled" radio_style="false" width="90" />
  
  <button
    name="newcard"
    label="New AO"
    font="SansSerifSmall"
    left_delta="0"
    bottom_delta="-25"
    width="200"
    height="20"
    follows="top|left"
		/>

  <!-- actual drag and drop target -->
  <view_border blevel_style="in" border_thickness="0" bottom_delta="-30" follows="left|top" height="20" left="1"
       mouse_opaque="false" name="ao_notecard" width="200" />

  <!-- target label border -->
  <view_border blevel_style="in" bottom_delta="0" follows="left|top" height="20" left="10"
       mouse_opaque="false" name="ao_notecard_vis" width="200" />
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom_delta="2" drop_shadow_visible="true" follows="left|top"
       font="SansSerifSmall" h_pad="0" halign="center" height="16" left_delta="0"
       mouse_opaque="true" name="Give inventory"
       tool_tip="Drop a ZHAO-formatted notecard here. Animations have to be in the same Inventory folder as the notecard." v_pad="2"
       width="200">
    Drag and drop AO notecard here
  </text>

  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
     bottom_delta="-22" drop_shadow_visible="true" follows="left|top"
     font="SansSerifBigger" h_pad="0" halign="center" height="16" left_delta="0"
     mouse_opaque="true" name="ao_current_text"
     tool_tip="" v_pad="2" width="80">
    Current AO:
  </text>
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
       bottom_delta="0" drop_shadow_visible="true" follows="left|top"
       font="SansSerifBigger" h_pad="0" halign="left" height="16" left_delta="85"
       mouse_opaque="true" name="ao_nc_text" font-style="BOLD|SHADOW"
       tool_tip="" v_pad="2" width="120">
    [NAME]
  </text>

  <button
      name="opencard"
      label="View AO"
      font="SansSerifSmall"
      left="10"
      bottom_delta="-25"
      width="95"
      height="20"
  follows="top|left"
		/>
  <button
      name="reloadcard"
      label="Reload AO"
      font="SansSerifSmall"
      left_delta="100"
      bottom_delta="0"
      width="95"
      height="20"
      follows="top|left"
		/>

  <check_box bottom_delta="-30" control_name="AONoStandsInMouselook" enabled="true"
           follows="left|top" font="SansSerifSmall" height="16" initial_value="true"
           label="Disable stands in mouselook" left="10" mouse_opaque="true"
           name="AONoStandsInMouselook" radio_style="false" width="180" />
  <check_box bottom_delta="-20" control_name="EnableAORemote" enabled="true"
             follows="left|top" font="SansSerifSmall" height="16" initial_value="true"
             label="Show AO toolbar" left_delta="0" mouse_opaque="true"
             name="ao_remote_checkbox" radio_style="false" width="180" />

  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
         bottom="-47" drop_shadow_visible="true" follows="left|top"
         font="SansSerifSmall" h_pad="0" halign="left" height="16" left="240"
         mouse_opaque="true" name="helptext" v_pad="0" width="240">
    Select an animation to override:
  </text>
  <scroll_list name="anim_list"
               bottom_delta="-170" left_delta="0" width="180" height="170"
               follows="left|top|bottom|right"
               draw_border="false" draw_heading="true"
               draw_stripes="true" background_visible="true"
               column_padding="5" sort_column="0" multi_select="false"
               mouse_opaque="true" >
    <column name="ao_label" label="Animation" dynamicwidth="true" />
  </scroll_list>
  
  <text bg_visible="false" border_drop_shadow_visible="false" border_visible="false"
	     bottom="-72" drop_shadow_visible="true" follows="top|right"
	     font="SansSerifSmall" h_pad="0" halign="left" height="16" left="440"
	     mouse_opaque="true" name="anim_desc" v_pad="0" width="240">
    Current stand:
  </text>
  <combo_box name="anim_combo" label="" follows="top|right" height="20" 
             left_delta="0" width="180" bottom_delta="-20"/>
  <button
    name="anim_prev"
    tool_tip="Previous animation"
    label="&lt;&lt;"
    font="SansSerifSmall"
    left_delta="0"
    bottom_delta="-25"
    width="90"
    height="20"
    follows="top|right"
		/>
  <button
    name="anim_next"
    tool_tip="Next animation"
    label="&gt;&gt;"
    font="SansSerifSmall"
    left_delta="95"
    bottom_delta="0"
    width="90"
    height="20"
    follows="top||right"
		/>
  
